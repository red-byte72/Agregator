<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.agregator.CatalogGoodsActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editFindCatalogGoods"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_filter"
        android:id="@+id/btnFilterCatalogGoods"
        android:layout_below="@+id/editFindCatalogGoods"
        android:layout_alignRight="@+id/editFindCatalogGoods"
        android:layout_alignEnd="@+id/editFindCatalogGoods" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_scan_barcode"
        android:id="@+id/btnScanerCatalogGoods"
        android:layout_below="@+id/btnFilterCatalogGoods"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btnFilterCatalogGoods"
        android:layout_alignStart="@+id/btnFilterCatalogGoods" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listCatalogGoods"
        android:layout_below="@+id/btnScanerCatalogGoods" />
</RelativeLayout>
